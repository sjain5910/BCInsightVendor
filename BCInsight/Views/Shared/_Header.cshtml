@using BCInsight.Web.HelperClass
@{
    var currentUser = Utility.CurrentLoginUser;
    if (currentUser == null)
    {
        var Name = currentUser.Name;
    }
}


<style type="text/css">
    .profile-menu-list {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 0.0625em 0.0625em, rgba(0, 0, 0, 0.25) 0px 0.125em 0.5em, rgba(255, 255, 255, 0.1) 0px 0px 0px 1px inset !important;
        display: none;
        position: absolute;
        top: 55px;
        right: 15px;
        background-color: #fff;
        z-index: 999;
        width: 200px;
        box-shadow: 0px 0px 17px 0px rgb(0 0 0 / 7%);
        -webkit-box-shadow: 0px 0px 17px 0px rgb(0 0 0 / 7%); /*-ms-box-shadow: 0px 0px 17px 0px rgba(0, 0, 0, 0.07);*/
    }

        .profile-menu-list .pro-inner div {
            padding: 10px 20px;
            text-align: left;
            position: relative;
        }

        .profile-menu-list .pro-inner::before {
            position: absolute;
            content: "";
            right: 0px;
            top: -10px;
            background-color: #163565;
            height: 20px;
            width: 30px;
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        }

        .profile-menu-list .pro-inner .user-name {
            background-color: #163565;
            color: #fff;
            font-size: 20px;
            font-family: 'popins-lt';
        }

        .profile-menu-list .pro-inner a {
            color: #14b0dc
        }

    .right-section .nav-section .profile-menu-list .pro-inner .setting:hover, .user-prof:hover, .logout:hover {
        cursor: pointer;
        background-color: #f7f4f4
    }

    .navCustomMenu {
        padding: 2px 0;
        border-bottom: 1px solid #dfdfdf;
    }

    .navbar-light .navbar-nav .nav-link {
        color: #14b0dc !important
    }
</style>

<!-- Preloader -->
<div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__wobble" src="~/Images/ic_launcher.png" alt="AdminLTELogo" height="60" width="60">
</div>
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light text-sm">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index","Home")" class="nav-link">Home</a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <div class="profile-menu">
                <img src="~/Images/img1.jpg" class="img-circle" height="40" width="40" alt="User Image" style="border:3px solid #14b0dc;cursor:pointer;"
                     onerror="this.onerror=null; this.src='@Request.Url.GetLeftPart(UriPartial.Authority)@Request.ApplicationPath/Content/img/Userlogo.png';" />
            </div>
            <div class="profile-menu-list">
                <div class="pro-inner">
                    <div class="user-name">
                        @currentUser.Name
                    </div>
                    <div class="navCustomMenu">
                        <a href="@Url.Action("ChangePassword","Login")" class="nav-link pl-0">
                            <h6>Change Password</h6>
                        </a>
                    </div>                   
                    <div class="navCustomMenu">
                        <a style="font-weight:bold; font-size:large;cursor:pointer;" href="@Url.Action("Logout","Login")" class="nav-link p-0">
                            Log Out
                        </a>
                    </div>
                </div>

            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>
    $(".profile-menu").click(function () {
        $(".profile-menu-list").toggle("fast")
    });
</script>