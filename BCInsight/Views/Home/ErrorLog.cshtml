@model List<BCInsight.DAL.TblLog>
@{
    ViewBag.Title = "Error Log";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Error Log</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("")">Home</a></li>
                    @*<li class="breadcrumb-item active">Dashboard v2</li>*@
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<table id="tblerrorLog" class="table table-bordered table-striped display compact">
    <thead>
        <tr>
            <th>ID</th>
            <th>DATE</th>
            <th>THREAD</th>
            <th>LEVEL</th>
            <th>LOGGER</th>
            <th>MESSAGE</th>
            <th>DETAILS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date</td>
                <td>@item.Thread</td>
                <td>@item.Level</td>
                <td>@item.Logger</td>
                <td>@item.Exception</td>
                <td>@item.Message</td>
            </tr>

        }
    </tbody>
</table>



<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
    $(function () {
        $("#tblerrorLog").DataTable({
            "responsive": true,
            "lengthChange": true,
            "autoWidth": false,
            "ordering": false,
            "language": {
                "emptyTable": "Error log not found"
            },
        });
    });
</script>
